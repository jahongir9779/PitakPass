<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient android:endColor="@color/orangeDarker" android:startColor="@color/color_button_default"   android:angle="-90" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/button_grey" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient android:endColor="@color/orangeDarker" android:startColor="@color/color_button_default"
                android:angle="-90"/>
        </shape>
    </item>

</selector>